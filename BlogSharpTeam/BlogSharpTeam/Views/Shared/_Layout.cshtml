<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Team#</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
      <aside class="sidebar">
                <nav>
                    <ul>
                        <li class="single-menu-element">@Html.ActionLink("User profile", "Index", "Manage")</li><br />
                        <li class="single-menu-element">@Html.ActionLink("Posts", "Index", "Posts")</li><br />
                        <li class="single-menu-element">@Html.ActionLink("New Post", "Create", "Posts")</li>
                        <li><img src="~/images/softuni-logo.png" hight="200" width="155" /></li>
                        <li class="single-menu-element">@Html.ActionLink("Galery", "Index", "Galleries")</li><br />
                        <li class="single-menu-element">@Html.ActionLink("Downloads", "DownloadsIndex", "Downloads")</li>
                    </ul>
                </nav>
        </aside>
    }
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <img src="~/images/software-university-logo.png" />
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Fun", "FunIndex", "Fun")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
@if (User.Identity.IsAuthenticated)
{
    <div class="container body-content1">
        @RenderBody()
        <hr/>
        <footer>
            <p>&copy; @DateTime.Now.Year - Blog Web Site by #Team, students of SoftUni<></p>
        </footer>
    </div>
}
else
{
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Blog Web Site by #Team, students of SoftUni</p>
        </footer>
    </div>
}


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
